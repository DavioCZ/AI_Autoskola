{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "build",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "rootDir": "."
  },
  "include": [
    "server.js",
    "src/**/*.js",
    "src/**/*.d.ts",
    "utils/**/*.js"
  ]
}
